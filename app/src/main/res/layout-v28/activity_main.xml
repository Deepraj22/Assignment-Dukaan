<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F4F2F2"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/background"
            android:fontFamily="@font/gg_regular_font"
            android:paddingStart="20dp"
            android:paddingTop="14dp"
            android:text="@string/app_title"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumb="@drawable/thumb"
            app:track="@drawable/track"
            android:layout_alignEnd="@+id/txtTitle"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            tools:ignore="RtlSymmetry" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="65dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/card_border"
            android:backgroundTint="@color/white"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingTop="15dp"
            android:paddingRight="12dp"
            android:paddingBottom="5dp"
            android:elevation="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gg_regular_font"
                android:text="@string/card_heading"
                android:textColor="#1A181E"
                android:textFontWeight="900"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gg_regular_font"
                android:paddingTop="5dp"
                android:text="@string/card_desc"
                android:textColor="#808080"
                android:textSize="15.2sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gg_regular_font"
                    android:text="@string/hyperLink"
                    android:textColor="#EE741F"
                    android:textFontWeight="700"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    tools:ignore="RtlHardcoded">

                    <ImageView
                        android:layout_width="97dp"
                        android:layout_height="32dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/whatsapp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/card_border"
                android:backgroundTint="#1A146EB4"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gg_regular_font"
                    android:paddingTop="15dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="15dp"
                    android:text="@string/domain"
                    android:textColor="#146EB4"
                    android:textFontWeight="600"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_textview"
                    android:gravity="center"
                    android:drawableRight="@drawable/arrow_right_white"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gg_regular_font"
                    android:text="@string/overview"
                    android:textColor="@color/black"
                    android:textFontWeight="700"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    tools:ignore="RtlHardcoded">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gg_regular_font"
                        android:text="@string/last_week"
                        android:textColor="@color/grey"
                        android:textFontWeight="700"
                        android:textSize="18sp"
                        app:drawableRightCompat="@drawable/arrow_down" />
                </LinearLayout>
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@+id/overviewTV"
                tools:layout_editor_absoluteX="17dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    app:cardCornerRadius="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:gravity="start"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/orders"
                            android:textSize="15sp"
                            android:textColor="#808080"
                            android:fontFamily="@font/gg_regular_font"
                            android:textAlignment="center"
                            android:layout_marginBottom="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_33"
                            android:textColor="#1A181E"
                            android:textSize="30sp"
                            android:fontFamily="@font/gg_regular_font"
                            android:textAlignment="center" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    app:cardCornerRadius="8dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:gravity="start"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_sales"
                            android:textSize="15sp"
                            android:textColor="#808080"
                            android:fontFamily="@font/gg_regular_font"
                            android:textAlignment="center"
                            android:layout_marginBottom="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_2_918"
                            android:textColor="#1A181E"
                            android:textSize="30sp"
                            android:fontFamily="@font/gg_regular_font"
                            android:textAlignment="center" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    app:cardCornerRadius="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:gravity="start"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/store_views"
                            android:textColor="#808080"
                            android:textSize="15sp"
                            android:fontFamily="@font/gg_regular_font"
                            android:textAlignment="center"
                            android:layout_marginBottom="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_301"
                            android:textSize="30sp"
                            android:textColor="#1A181E"
                            android:fontFamily="@font/gg_regular_font"
                            android:textAlignment="center" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    app:cardCornerRadius="8dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:gravity="start"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/product_views"
                            android:textSize="15sp"
                            android:textColor="#808080"
                            android:fontFamily="@font/gg_regular_font"
                            android:textAlignment="center"
                            android:layout_marginBottom="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_19_121"
                            android:textSize="30sp"
                            android:textColor="#1A181E"
                            android:fontFamily="@font/gg_regular_font"
                            android:textAlignment="center"
                            android:layout_marginBottom="5dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gg_regular_font"
                    android:text="@string/active_orders"
                    android:textColor="@color/black"
                    android:textFontWeight="700"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    tools:ignore="RtlHardcoded">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gg_regular_font"
                        android:text="@string/view_all"
                        android:textColor="@color/grey"
                        android:textFontWeight="700"
                        android:textSize="18sp"
                        app:drawableRightCompat="@drawable/arrow_rightt" />
                </LinearLayout>
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/background"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="10dp"
                            android:text="Pending (129)"
                            android:fontFamily="@font/gg_regular_font"
                            android:textColor="@color/white"
                            android:textSize="18sp" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        android:layout_marginStart="16dp"
                        android:backgroundTint="@color/light_grey">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="10dp"
                            android:text="Accepted (13)"
                            android:fontFamily="@font/gg_regular_font"
                            android:textSize="18sp"
                            android:textColor="@color/grey"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        android:backgroundTint="@color/light_grey"
                        android:layout_marginStart="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shipped (5)"
                            android:fontFamily="@font/gg_regular_font"
                            android:textSize="18sp"
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/grey"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        android:layout_marginStart="16dp"
                        android:backgroundTint="@color/light_grey">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivered (15)"
                            android:fontFamily="@font/gg_regular_font"
                            android:textSize="18sp"
                            android:background="@color/light_grey"
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/grey"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="NestedScrolling">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/gg_regular_font"
                                    android:text="Order #2812173"
                                    android:textColor="@color/black"
                                    android:textFontWeight="700"
                                    android:textSize="18sp"
                                    android:layout_marginEnd="5dp"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:orientation="horizontal"
                                    tools:ignore="RtlHardcoded">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/gg_regular_font"
                                        android:text="Today, 11:11PM"
                                        android:textColor="@color/grey"
                                        android:textSize="17sp"
                                        tools:ignore="TooDeepLayout" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_marginEnd="10dp"
                                        app:cardCornerRadius="5dp">

                                        <ImageView
                                            android:layout_width="80dp"
                                            android:layout_height="80dp"
                                            android:src="@drawable/pic"
                                            android:contentDescription="TODO" />
                                    </androidx.cardview.widget.CardView>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:fontFamily="@font/gg_regular_font"
                                            android:paddingBottom="10dp"
                                            android:text="1 ITEM"
                                            android:textColor="@color/grey"
                                            android:textFontWeight="700"
                                            android:textSize="18sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/gg_regular_font"
                                            android:text="₹79"
                                            android:textColor="@color/background"
                                            android:textFontWeight="900"
                                            android:textSize="18sp" />
                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:orientation="horizontal"
                                    tools:ignore="RtlHardcoded">

                                    <Button
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/light_orange"
                                        android:text="COD"
                                        android:fontFamily="@font/gg_regular_font"
                                        android:textSize="16sp"
                                        android:textFontWeight="800"
                                        android:textColor="@color/red"
                                        android:layout_marginTop="20sp"/>

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:layout_width="5dp"
                                android:layout_height="140dp"
                                android:backgroundTint="@color/dark_red">
                            </androidx.cardview.widget.CardView>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingStart="10dp"
                                android:paddingBottom="15dp"
                                android:paddingTop="15dp"
                                android:paddingEnd="15dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/gg_regular_font"
                                        android:text="COUNTER"
                                        android:textColor="@color/black"
                                        android:textFontWeight="700"
                                        android:textSize="18sp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="right"
                                        android:orientation="horizontal"
                                        tools:ignore="RtlHardcoded">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/gg_regular_font"
                                            android:text="Yesterday, 12:10PM"
                                            android:textColor="@color/grey"
                                            android:textSize="17sp" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <androidx.cardview.widget.CardView
                                            android:layout_width="80dp"
                                            android:layout_height="80dp"
                                            android:layout_marginEnd="10dp"
                                            app:cardCornerRadius="5dp"
                                            tools:ignore="TooManyViews">

                                            <ImageView
                                                android:layout_width="80dp"
                                                android:layout_height="80dp"
                                                android:src="@drawable/pic"
                                                android:contentDescription="TODO" />
                                        </androidx.cardview.widget.CardView>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                android:fontFamily="@font/gg_regular_font"
                                                android:paddingBottom="10dp"
                                                android:text="1 ITEM"
                                                android:textColor="@color/grey"
                                                android:textFontWeight="700"
                                                android:textSize="18sp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/gg_regular_font"
                                                android:text="₹79"
                                                android:textColor="@color/background"
                                                android:textFontWeight="900"
                                                android:textSize="18sp" />
                                        </LinearLayout>

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="right"
                                        android:orientation="horizontal"
                                        tools:ignore="RtlHardcoded">
                                        <androidx.cardview.widget.CardView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:backgroundTint="@color/light_green"
                                            app:cardCornerRadius="5dp"
                                            android:layout_marginTop="20dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:paddingLeft="20dp"
                                                android:paddingTop="10dp"
                                                android:paddingRight="20dp"
                                                android:paddingBottom="10dp"
                                                android:text="PAID"
                                                android:fontFamily="@font/gg_regular_font"
                                                android:textColor="@color/green"
                                                android:textSize="17sp"
                                                android:textFontWeight="900"/>
                                        </androidx.cardview.widget.CardView>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp">
